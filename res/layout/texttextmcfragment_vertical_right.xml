<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/questionTop_overlap"
        layout="@layout/question_top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/description_answer"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/placeholder"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/description_question"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/placeholder"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="horizontal">

	    <LinearLayout 
	        android:layout_height="match_parent"
	        android:layout_width="0dip"
	        android:layout_weight="1"
	        android:orientation="vertical" >
	        <Button
	            android:id="@+id/choice1"
	            android:layout_height="0dip"
	            android:layout_width="match_parent"
	            android:layout_weight="1"
	            android:text=""></Button>
	        <Button
	            android:id="@+id/choice2"
	            android:layout_height="0dip"
	            android:layout_width="match_parent"
	            android:layout_weight="1"
	            android:text=""></Button>
	        <Button
	            android:id="@+id/choice3"
	            android:layout_height="0dip"
	            android:layout_width="match_parent"
	            android:layout_weight="1"
	            android:text=""></Button>
	        <Button
	            android:id="@+id/choice4"
	            android:layout_height="0dip"
	            android:layout_width="match_parent"
	            android:layout_weight="1"
	            android:text=""></Button>
	        <Button
	            android:id="@+id/choice5"
	            android:layout_height="0dip"
	            android:layout_width="match_parent"
	            android:layout_weight="1"
	            android:text=""></Button>
	        <Button
	            android:id="@+id/choice6"
	            android:layout_height="0dip"
	            android:layout_width="match_parent"
	            android:layout_weight="1"
	            android:text=""></Button>
	        <Button
	            android:id="@+id/choice7"
	            android:layout_height="0dip"
	            android:layout_width="match_parent"
	            android:layout_weight="1"
	            android:text=""></Button>
	        <Button
	            android:id="@+id/choice8"
	            android:layout_height="0dip"
	            android:layout_width="match_parent"
	            android:layout_weight="1"
	            android:text=""></Button>
	    </LinearLayout>

	    <RelativeLayout
	        android:layout_width="0dip"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:layout_margin="5dip"
	        android:orientation="horizontal">
	
		    <TextView
		        android:id="@+id/question"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_centerHorizontal="true"
		        android:layout_centerVertical="true"
		        android:text="@string/placeholder"
		        android:contentDescription="@string/contentDescription_photo"
		        android:textAppearance="?android:attr/textAppearanceLarge" />
	
	    </RelativeLayout>
    </LinearLayout>

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/questionBottom_overlap"
        layout="@layout/question_bottom" />

</LinearLayout>