<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content">
<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Select Level" android:textSize="30dip" android:layout_margin="5dip" android:id="@+id/levelselect_title"></TextView>
<LinearLayout android:layout_below="@+id/levelselect_title" android:id="@+id/levelselect_info" android:layout_height="fill_parent" android:layout_margin="5dip" android:layout_alignRight="@id/levelselect_title" android:layout_width="fill_parent" android:orientation="vertical">
<TextView android:layout_height="wrap_content" android:id="@+id/levelselect_itemtitle" android:layout_width="wrap_content" android:layout_gravity="center_horizontal" android:textSize="20sp" android:text="Title"></TextView>
<TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_gravity="center_horizontal" android:id="@+id/levelselect_itemauthor" android:text="Author" android:textSize="14sp"></TextView>
<TextView android:textSize="14sp" android:layout_height="wrap_content" android:text="Time" android:layout_width="wrap_content" android:id="@+id/levelselect_itemtime" android:layout_gravity="center_horizontal"></TextView>
</LinearLayout>
<ListView android:id="@+id/levelselect_list" android:layout_height="fill_parent" android:layout_toRightOf="@id/levelselect_title" android:layout_width="fill_parent" android:layout_margin="5dip"></ListView>

</RelativeLayout>
