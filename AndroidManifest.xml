<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="uk.digitalsquid.contactrecall"
      android:versionCode="1" android:versionName="0.1">
    <uses-sdk android:minSdkVersion="13" android:targetSdkVersion="17"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"></uses-permission>
    <uses-permission android:name="android.permission.WRITE_CONTACTS"></uses-permission>

    <application android:icon="@drawable/icon" android:label="@string/app_name" android:name="App">
        <activity android:name=".StartActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="ContactViewer" android:label="@string/viewcontacts"></activity>
        <activity android:label="@string/capturephoto" android:name="PhotoCapture" android:theme="@android:style/Theme.Dialog"></activity>
        <activity android:label="@string/selectMode" android:name="ModeSelect" android:theme="@android:style/Theme.Light"></activity>
        <activity android:name=".ingame.Game" android:theme="@android:style/Theme.Light.NoTitleBar"></activity>

    </application>
</manifest>